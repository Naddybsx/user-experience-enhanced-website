{% render 'partials/head.liquid' %}
{% include 'partials/nav.liquid' %}

<header class="stekje-hero">
  <div class="hero-layout">
    <picture>
      <source srcset="https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?format=avif&width=600" type="image/avif">
      <source srcset="https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?format=webp&width=600" type="image/webp">
      <img
        src="https://fdnd-agency.directus.app/assets/{{ stekje.foto.id }}?width=600"
        width="{{ stekje.foto.width }}"
        height="{{ stekje.foto.height }}"
        alt="{{ stekje.naam }}"
        >
    </picture>

     <section class="stekje-hero-content">
      <h1>{{ stekje.naam }}</h1>
      <p>Leer meer over deze bijzondere plant</p>
     </section>
  </div>
</header>

 <article class="stekje-info">
    <h2>{{ stekje.naam }}</h2>
    <p>{{ stekje.beschrijving }}</p>

    <div class="accordion-wrapper">
      <details class="accordion">
        <summary>🌍 Land van herkomst</summary>
        <p>{{ stekje.land_van_herkomst }}</p>
      </details>

      <details class="accordion">
        <summary>🌞 Zonlicht</summary>
        <p>{{ stekje.zonlicht }}</p>
      </details>

      <details class="accordion">
        <summary>💧 Waterbehoefte</summary>
        <p>{{ stekje.watergeven }}</p>
      </details>

      <details class="accordion">
        <summary>🍽️ Voeding</summary>
        <p>{{ stekje.voeding }}</p>
      </details>

      <details class="accordion">
        <summary>🌱 Verpotten</summary>
        <p>{{ stekje.verpotten }}</p>
      </details>

      <details class="accordion">
        <summary>🌡️ Temperatuur</summary>
        <p>{{ stekje.temperatuur }}</p>
      </details>

      <details class="accordion">
        <summary>☠️ Giftigheid</summary>
        <p>{{ stekje.giftigheid }}</p>
      </details>
    </div>

    <footer class="like-footer">
        <p>🌿 Vond je dit stekje interessant? Voeg het toe aan je favorieten!</p>

        <div id="notification" class="notification hidden"></div>
      
        <form class="like-form" action="/stekje/{{ stekje.id }}" onsubmit="submitLike(event)">
          <button type="submit" class="submit-button">
            <span class="button-text">❤️ Toevoegen aan favorieten</span>
            <span class="loader" hidden></span>
          </button>
        </form>
      </footer>
  </article>

{% render 'partials/foot.liquid' %} 